{
  "name": "awesome-solidity-project",
  "version": "1.0.0",
  "description": "DeFi双项目: 多签智能钱包 + DEX聚合器平台",
  "main": "index.js",
  "engines": {
    "node": ">=16.0.0 <=20.x.x",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "check-node": "node scripts/check-node-version.js",
    "precompile": "npm run check-node",
    "compile": "hardhat compile",
    "test": "hardhat test --network sepolia",
    "test:local": "hardhat test --network hardhat",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test --network sepolia",
    "test:gas:local": "REPORT_GAS=true hardhat test --network hardhat",
    "node": "hardhat node",
    "node:fork": "hardhat node --fork https://eth-mainnet.alchemyapi.io/v2/$ALCHEMY_API_KEY",
    "deploy": "hardhat deploy --network sepolia",
    "deploy:sepolia": "hardhat deploy --network sepolia",
    "deploy:local": "hardhat deploy --network localhost",
    "deploy:hardhat": "hardhat deploy --network hardhat",
    "verify": "hardhat verify --network sepolia",
    "verify:sepolia": "hardhat verify --network sepolia",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'",
    "env:verify": "node scripts/verify-environment.js",
    "env:verify:sepolia": "node scripts/verify-environment.js --network sepolia",
    "wallet:encrypt": "node scripts/crypto-wallet.js encrypt",
    "wallet:decrypt": "node scripts/crypto-wallet.js decrypt",
    "wallet:test": "node scripts/crypto-wallet.js test",
    "wallet:backup": "node scripts/crypto-wallet.js backup"
  },
  "keywords": [
    "solidity",
    "defi",
    "multisig",
    "dex-aggregator",
    "diamond-standard",
    "hardhat"
  ],
  "author": "James - Full Stack Developer",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "chai": "^4.3.8",
    "ethers": "^5.7.2",
    "hardhat": "^2.17.2",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.11.37",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "dotenv": "^17.2.2",
    "hardhat-diamond-abi": "^3.0.1"
  }
}
